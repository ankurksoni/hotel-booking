{
	"isFastifyDebugEnabled" : false,
	"serverPort": 5000,
	"serverHost": "0.0.0.0",
	"logger": {
		"filename": "hotel-booking.log",
		"fatalfilename": "hotel-booking-fatal.log",
		"dirname": "logs"
	},
	"log": {
		"rotationLog": {
			"period": "1d",
			"count": 15,
			"level": "error"

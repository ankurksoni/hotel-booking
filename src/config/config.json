			"period": "1d",
			"count": 15,
			"level": "fatal"
		},
		"consoleLog": {
			"level": "info"
		}
	},
	"dbconfig" : {
		"host" : "localhost",
		"port" : 27017,
		"databaseName" : "booking"
	}
}